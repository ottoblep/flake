{ config, lib, pkgs, ... }:
{
  config = {
    home-manager.users.sevi = ./home.nix;

    users.users.sevi = {
      isNormalUser = true;
      home = "/home/sevi";
      createHome = true;
      shell = pkgs.zsh;
      extraGroups = [ "wheel" ];
      openssh.authorizedKeys.keys = [
        "ssh-rsa  Sevis SSH Key"
      ];
    };

    programs.zsh.enable = true;
    environment.variables.EDITOR = "vim";
  };
}
